                            <th scope="col">Messege</th>
                            <th scope="col">Sender</th>
                            <th scope="col">Time Sent</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Resend</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < histories.length ; i++) { %>
                        <tr>
                            <!-- <td scope="row" class="text-truncate">Mark Otto de modo</td> -->
                            <td class="text-truncate"><%= histories[i].to %></td>
                            <td class="text-truncate"><%= histories[i].message %></td>
                            <td class="text-truncate"><%= histories[i].from %></td>
                            <td class="text-truncate" id="time"> <%= histories[i].createdAt.toLocaleString('en-us', {month: 'long' , day: '2-digit' , year: 'numeric'
                                , minute: '2-digit' , hour: '2-digit' }) %></td>  
                                <form method="get" action="/edit/<%= histories[i]._id %>">      
                                <td class="button-td"><button class="btn btn-link" type="submit" id="edit">Edit</button></td>
                                </form>
                            <form method="post" action="/api/v1/messages/:id">
                                <input type="hidden" name="messageId" value="<%= histories[i]._id %>">
                                <input type="hidden" name="ref" id="" value="/records">
                            <td class="button-td"><button class="btn btn-link" type="submit" id="resend">Resend</button></td>
                            </form>
                        </tr>
                        <% } %>
